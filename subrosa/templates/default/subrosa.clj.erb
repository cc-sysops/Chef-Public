{:port <%= node['subrosa']['port'] %>
 :host "<%= node['subrosa']['host'] %>"
 :network "<%= node['subrosa']['network'] %>"
<%- unless node['subrosa']['ssl'] %>
 :ssl {:keystore nil
       :password nil}
<% end %>
<%- if node['subrosa']['password'].nil? %>
 :password nil
<% else %>
 :password "<%= node['subrosa']['password'] %>"
<% end %>
 :plugins {:fs-logging {:enabled? true
                        :directory "<%= node['subrosa']['fs-logging']['directory'] %>"}
           :catchup {:enabled? true
                     :max-msgs-per-room 20
                     :default-playback-size 10}
           :swank {:enabled? false
                   :port 4005}}}