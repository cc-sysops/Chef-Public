#!/usr/bin/env puma

# This file was generated by chef for <%= node[:fqdn] %>
# do not change this file by hand!

application_path = "<%= @gitlab_app_home %>"

directory application_path

environment "<%= @gitlab_environment %>"

daemonize true

pidfile "<%= @gitlab_app_home %>/tmp/pids/puma.pid"

state_path "<%= @gitlab_app_home %>/tmp/pids/puma.state"

stdout_redirect "<%= @gitlab_app_home %>/log/puma.stdout.log", "<%= @gitlab_app_home %>/log/puma.stderr.log"

bind "unix://<%= @gitlab_app_home %>/tmp/sockets/gitlab.socket"
