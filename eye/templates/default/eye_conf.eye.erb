require File.join(File.dirname(__FILE__), "config.rb")

Eye.application "<%= @name %>" do
  working_dir "<%= @working_dir || '/tmp' %>"
  process "<%= @name %>" do
    start_command "<%= @start_command %>"
    <% if @stop_command %>
    stop_command "<%= @stop_command %>"
    <% end -%>
    <% if @stop_signales %>
    stop_signals "<%= @stop_signals %>"
    <% end -%>
    <% if @pid_file %>
    pid_file "<%= @pid_file %>"
    <% end -%>
    <% if @uid %>
    uid "<%= @uid %>"
    <% end -%>
    <% if @gid %>
    gid "<%= @gid %>"
    <% end -%>
    daemonize <%= @daemonize || "false" %>
  end
end
