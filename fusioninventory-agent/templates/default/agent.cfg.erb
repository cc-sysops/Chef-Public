# fusioninventory agent configuration
#auto-generated by chef
#do not modify directly as changes will be lost

# all defined values match default
# all commented values are examples


#
# Target definition options
#

# send tasks results to an OCS server
#server = http://server.domain.com/ocsinventory
server = <%= node['fusioninventory-agent']['server_url'] %>
# send tasks results to a FusionInventory for GLPI server
#server = http://server.domain.com/glpi/plugins/fusioninventory/
# write tasks results in a directory
#local = /tmp
# write tasks results on stdout
#stdout = 1

#
# Task definition options
#

#
# Target scheduling options
#

# maximum initial delay before first target, in seconds
delaytime = 3600
# maximum delay between each targets, in seconds
wait =
# do not contact the target before next scheduled time
lazy = <%= node['fusioninventory-agent']['lazy'] %>

#
# Inventory task specific options
#

# do not list local printers
# no-category = printer
# allow to scan use home directories
scan-homedirs = 0
# save the inventory as HTML
html = 0
# timeout for inventory modules execution
backend-collect-timeout = 30
# always send data to server
force = 0
# mark the machine with given tag
tag = <%= node['fusioninventory-agent']['tag'] %>
# additional content inventory file
additional-content =

no-task ocsdeploy = <%= node['fusioninventory-agent']['no-ocsdeploy'] %>
no-task inventory = <%= node['fusioninventory-agent']['no-inventory'] %>
no-category printer = <%= node['fusioninventory-agent']['no-printer'] %>
no-category software = <%= node['fusioninventory-agent']['no-software'] %>
no-task wakeonlan = <%= node['fusioninventory-agent']['no-wakeonlan'] %>
no-task snmpquery = <%= node['fusioninventory-agent']['no-snmpquery'] %>
no-discovery = <%= node['fusioninventory-agent']['no-discovery'] %>
no-p2p = <%= node['fusioninventory-agent']['no-p2p'] %>


#
# Network options
#

# proxy address, e.g: http://user:pass@proxy:port
proxy = <%= node['fusioninventory-agent']['proxy'] %>
# user name for server authentication
user = <%= node['fusioninventory-agent']['proxy_user'] %>
# password for server authentication
password = <%= node['fusioninventory-agent']['proxy_pass'] %>
# path to the CA certificates directory
ca-cert-dir = <%= node['fusioninventory-agent']['ca-cert-dir'] %>
# path to the CA certificates file
ca-cert-file = <%= node['fusioninventory-agent']['ca-cert-file'] %>
# do not check server SSL certificates
no-ssl-check = <%= node['fusioninventory-agent']['no-ssl-check'] %>
# connection timeout
timeout = 180

#
# Web interface options
#

# do not use web interface
no-httpd = <%= node['fusioninventory-agent']['no-httpd'] %>
# network interface to listen to
httpd-ip =  <%= node['fusioninventory-agent']['httpd-ip'] %>
# network port to list to
httpd-port = <%= node['fusioninventory-agent']['httpd-port'] %>
# trust requests without authentication token
httpd-trust = <%= node['fusioninventory-agent']['httpd-trust'] %>

#
# Logging options
#

# Logger backend, either Stderr, File or Syslog (Stderr)
logger = Stderr
# log file
#logfile = /var/log/fusioninventory.log
# maximum log file size
#logfile-maxsize = 0
# Syslog facility
logfacility = LOG_USER
# Use color in the console
color = 0

#
# Execution mode options
#

# run as daemon
daemon =  <%= node['fusioninventory-agent']['daemon'] %>
# don't fork in background
no-fork = 0
# debug mode
debug = 0
