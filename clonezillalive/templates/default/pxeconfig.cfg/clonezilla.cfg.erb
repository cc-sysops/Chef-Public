LABEL clonezilla-restoredisk
    MENU LABEL CZ Restore Disk
    KERNEL clonezilla/vmlinuz
    APPEND initrd=clonezilla/initrd.img boot=live <%
%>    config noswap nolocales edd=on nomodeset <%
%>    ocs_prerun1="sudo mount -t nfs <%= @serverip %>:/media/clonezilla /home/partimag -o ro" <%
%>    ocs_live_run="ocs-sr -g auto -e1 auto -e2 -c -r -j2 -p true restoredisk ask_user ask_user" <%
%>    ocs_live_extra_param="" <%
%>    ocs_postrun1="sleep 20" <%
%>    keyboard-layouts=de <%
%>    ocs_live_batch="yes" <%
%>    nosplash noprompt <%
%>    fetch=tftp://<%= @serverip %>/clonezilla/filesystem.squashfs

